{
	"comments": {
		"blockComment": [
			"<!--",
			"-->"
		]
	},
	"brackets": [
		["{", "}"],
		["[", "]"],
		["(", ")"]
	],
	"autoClosingPairs": [
		{
			"open": "{",
			"close": "}"
		},
		{
			"open": "[",
			"close": "]"
		},
		{
			"open": "(",
			"close": ")"
		},
		{
			"open": "ab",
			"close": "ba"
		},
		{
			"open": "<",
			"close": ">",
			"notIn": [
				"string"
			]
		}
	],
	"surroundingPairs": [
		["(", ")"],
		["[", "]"],
		["`", "`"],
		["_", "_"],
		["*", "*"]
	],
	"folding": {
		"offSide": false,
		"markers": {
			"start": "^xij$",
			"end": "^jix$"
		}
	}
}
